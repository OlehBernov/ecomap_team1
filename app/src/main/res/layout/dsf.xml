<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/markerIcon"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:background="#eeeeee"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/star1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_star_border_black_24dp" />

  <ImageView
        android:id="@+id/star2"
        android:layout_width="25dp"
        android:layout_height="25dp"
      android:src="@drawable/ic_star_border_black_24dp"
      android:layout_alignTop="@+id/star1"
      android:layout_toRightOf="@+id/star1"
      android:layout_toEndOf="@+id/star1" />

      <ImageView
         android:id="@+id/star3"
         android:layout_width="25dp"
         android:layout_height="25dp"
          android:src="@drawable/ic_star_border_black_24dp"
          android:layout_alignTop="@+id/star2"
          android:layout_toRightOf="@+id/star2"
          android:layout_toEndOf="@+id/star2" />


     <ImageView
         android:id="@+id/star4"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:src="@drawable/ic_star_border_black_24dp"
         android:layout_alignTop="@+id/star3"
         android:layout_toRightOf="@+id/star3"
         android:layout_toEndOf="@+id/star3" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_alignTop="@+id/star4"
            android:layout_toRightOf="@+id/star4"
            android:layout_toEndOf="@+id/star4" />


        <TextView
            android:id="@+id/status_of_problem"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="41dp"
            android:text="not resolved"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#d01716"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginStart="41dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/star5"
            android:layout_toEndOf="@+id/star5" />

         <ImageView
              android:id="@+id/like"
              android:layout_width="25dp"
              android:layout_height="25dp"
             android:src="@drawable/like_iconq"
             android:layout_marginRight="8dp"
             android:layout_marginEnd="8dp"
             android:layout_alignBottom="@+id/status_of_problem"
             android:layout_toLeftOf="@+id/number_of_likes"
             android:layout_toStartOf="@+id/number_of_likes" />

           <TextView
               android:id="@+id/number_of_likes"
               android:layout_width="wrap_content"
               android:layout_height="22dp"
               android:text="0"
               android:textAppearance="?android:attr/textAppearanceSmall"
               android:textColor="@color/abc_primary_text_disable_only_material_light"
               android:textSize="17dp"
               android:layout_alignBottom="@+id/like"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_marginRight="9dp"
               android:layout_marginEnd="9dp" />


</RelativeLayout>