<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="5dp"
    android:id="@+id/problem_photo_viewer"
    android:background="#000000"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem_photo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/photo_error1"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

      <TextView
          android:id="@+id/photo_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="34dp"
          android:layout_marginStart="34dp"
          android:textColor="#d4d4d4"
          android:layout_marginTop="33dp"
          android:text="sdf"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_below="@+id/problem_photo"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

</RelativeLayout>
