<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="#BCBCBC"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff004d40"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/cards"
                card_view:cardBackgroundColor="@color/card_view_background"
                card_view:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:id="@+id/ibm">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:text="@string/date"
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/filter_button_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="305dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <TextView
                            android:id="@+id/date_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="dateFromChoosing"
                            android:text="@string/default_filter_date_from"
                            android:clickable="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff5e5e5e"
                            android:textSize="15sp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView3"
                            android:src="@drawable/new_calendar"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_from"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginStart="55dp"
                            android:layout_alignTop="@+id/date_from"
                            android:layout_toRightOf="@+id/imageView3"
                            android:layout_toEndOf="@+id/imageView3" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_to"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp"
                            android:layout_marginLeft="64dp"
                            android:layout_marginStart="64dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/imageView5"
                            android:layout_toEndOf="@+id/imageView5" />

                        <TextView
                            android:id="@+id/date_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="dateToChoosing"
                            android:clickable="true"
                            android:text="@string/default_filte_date_to"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ff5e5e5e"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView5"
                            android:src="@drawable/new_calendar"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/cards"
                card_view:cardBackgroundColor="@color/card_view_background"
                card_view:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:gravity="right"
                        android:text="@string/status"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/filter_button_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star"
                            android:layout_alignBottom="@+id/ButtonResolved" />

                        <Button
                            android:id="@+id/ButtonResolved"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/resolved"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp"
                            android:layout_marginLeft="38dp"
                            android:layout_marginStart="38dp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/imageView10"
                            android:layout_toEndOf="@+id/imageView10">

                        </Button>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:paddingBottom="20sp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/new_problem"
                            android:layout_alignBottom="@+id/ButtonUnsolved" />

                        <Button
                            android:id="@+id/ButtonUnsolved"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/unsolved"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/imageView11"
                            android:layout_toEndOf="@+id/imageView11"
                            android:layout_marginLeft="38dp"
                            android:layout_marginStart="38dp">


                        </Button>

                    </RelativeLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/cards"
                card_view:cardBackgroundColor="@color/card_view_background"
                card_view:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/checkBox4"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/card_margin"
                        android:gravity="right"
                        android:text="@string/type"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/filter_button_text"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem1" />

                        <Button
                            android:id="@+id/type1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView12"
                            android:layout_toRightOf="@+id/imageView12"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/deforestation"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem2" />

                        <Button
                            android:id="@+id/type2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView13"
                            android:layout_toRightOf="@+id/imageView13"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/rubish_dump"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem3" />

                        <Button
                            android:id="@+id/type3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView14"
                            android:layout_toRightOf="@+id/imageView14"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/illegal_building"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem4" />

                        <Button
                            android:id="@+id/type4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView15"
                            android:layout_toRightOf="@+id/imageView15"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/water_pollution"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem5" />

                        <Button
                            android:id="@+id/type5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView16"
                            android:layout_toRightOf="@+id/imageView16"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/biodiversity"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem6" />

                        <Button
                            android:id="@+id/type6"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView17"
                            android:layout_toRightOf="@+id/imageView17"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/poaching"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/card_margin"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp">

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/problem7" />

                        <Button
                            android:id="@+id/type7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/card_bottom"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/imageView18"
                            android:layout_toRightOf="@+id/imageView18"
                            android:background="@color/filter_off"
                            android:drawableRight="@drawable/on"
                            android:gravity="left|center_vertical"
                            android:onClick="switchCheckButtonState"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:text="@string/other"
                            android:textAllCaps="false"
                            android:textColor="@color/filter_button_text"
                            android:textSize="15sp">

                        </Button>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>