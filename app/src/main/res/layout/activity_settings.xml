<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/update_time_button"
                    android:layout_width="@dimen/setting_item_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="start"
                    android:onClick="openChoosingTimeWindow"
                    android:text="@string/updating_time"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="@dimen/setting_item_width"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/divider_color">

                </View>

                <Button
                    android:id="@+id/map_type_button"
                    android:layout_width="@dimen/setting_item_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="start"
                    android:onClick="openChoosingMapTypeWindow"
                    android:text="@string/map_type"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="@dimen/setting_item_width"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/divider_color">

                </View>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>


