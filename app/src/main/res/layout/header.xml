<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmkcode.app.MainActivity">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/drawer_background8"
        android:id="@+id/imageView2">

    </ImageView>

    <com.pkmmte.view.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/type1"
        android:id="@+id/circle_photo"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/navigation_user_name"
        android:layout_alignLeft="@+id/navigation_user_name"
        android:layout_alignStart="@+id/navigation_user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email"
        android:textSize="16sp"
        android:textColor="@color/navigation_header_text"
        android:id="@+id/navigation_email"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:textColor="@color/navigation_header_text"
        android:textSize="16sp"
        android:id="@+id/navigation_user_name"
        android:layout_above="@+id/navigation_email"
        android:layout_alignLeft="@+id/navigation_email"
        android:layout_alignStart="@+id/navigation_email" />

</RelativeLayout>