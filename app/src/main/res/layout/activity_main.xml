<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hmkcode.app.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbar_teal"
                android:theme="@style/DrawerArrowStyle"
                android:title="@string/app_name">

            </android.support.v7.widget.Toolbar>

            <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drawer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <android.support.design.widget.NavigationView
                    android:id="@+id/navigation2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginLeft="-64dp"
                    android:background="@color/navigation"
                    app:itemIconTint="#333"
                    app:itemTextColor="#333">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:color="#BCBCBC"
                        android:orientation="vertical">

                        <ScrollView
                            android:id="@+id/scrollView"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/filter_background"
                                android:orientation="vertical"
                                android:weightSum="1">


                                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/cards"
                                    card_view:cardBackgroundColor="@color/card_view_background"
                                    card_view:cardCornerRadius="@dimen/corner_radius">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_margin="@dimen/card_margin"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="194dp"
                                            android:layout_height="wrap_content"
                                            android:layout_above="@+id/checkBox4"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_margin="@dimen/card_margin"
                                            android:gravity="right"
                                            android:text="@string/date"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/filter_button_text"
                                            android:textSize="25dp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:layout_width="327dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="@string/date_from"
                                                android:textSize="20dp"
                                                android:textColor="@color/filter_button_text"
                                                android:id="@+id/textView6"
                                                android:layout_marginLeft="41dp"
                                                android:layout_marginStart="41dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:text="@string/date_to"
                                                android:textSize="20dp"
                                                android:textColor="@color/filter_button_text"
                                                android:id="@+id/textView7"
                                                android:layout_marginRight="54dp"
                                                android:layout_marginEnd="54dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentEnd="true" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="327dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:layout_width="@dimen/calendar_size"
                                                android:layout_height="@dimen/calendar_size"
                                                android:src="@drawable/calendar"
                                                android:onClick="dateToChoosing"
                                                android:id="@+id/to"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentEnd="true" />

                                            <ImageView
                                                android:layout_width="@dimen/calendar_size"
                                                android:layout_height="@dimen/calendar_size"
                                                android:id="@+id/from"
                                                android:onClick="dateFromChoosing"
                                                android:src="@drawable/calendar"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/cards">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="20dp"
                                                android:textColor="@color/filter_button_text"
                                                android:text="11.31.2014"
                                                android:onClick="dateFromChoosing"
                                                android:id="@+id/date_from"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:textSize="20dp"
                                                android:onClick="dateToChoosing"
                                                android:textColor="@color/filter_button_text"
                                                android:text="11.11.2014"
                                                android:id="@+id/date_to"
                                                android:layout_marginRight="28dp"
                                                android:layout_marginEnd="28dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentEnd="true" />

                                        </RelativeLayout>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/cards"
                                    card_view:cardBackgroundColor="@color/card_view_background"
                                    card_view:cardCornerRadius="@dimen/corner_radius">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="88dp"
                                            android:layout_height="wrap_content"
                                            android:layout_above="@+id/checkBox4"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_margin="@dimen/card_margin"
                                            android:gravity="right"
                                            android:text="@string/status"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/filter_button_text"
                                            android:textSize="25dp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:layout_width="323dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView10"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/resolved2" />

                                            <Button
                                                android:id="@+id/ButtonResolved"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView10"
                                                android:layout_toRightOf="@+id/imageView10"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/resolved"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView11"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/unsolved" />

                                            <Button
                                                android:id="@+id/ButtonUnsolved"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginBottom="@dimen/card_bottom"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView11"
                                                android:layout_toRightOf="@+id/imageView11"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/unsolved"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">


                                            </Button>

                                        </RelativeLayout>
                                    </LinearLayout>


                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/cards"
                                    card_view:cardBackgroundColor="@color/card_view_background"
                                    card_view:cardCornerRadius="@dimen/corner_radius">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="1">


                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="76dp"
                                            android:layout_height="wrap_content"
                                            android:layout_above="@+id/checkBox4"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_margin="@dimen/card_margin"
                                            android:gravity="right"
                                            android:text="@string/type"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/filter_button_text"
                                            android:textSize="25dp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:layout_width="324dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView12"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem1" />

                                            <Button
                                                android:id="@+id/type1"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView12"
                                                android:layout_toRightOf="@+id/imageView12"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/deforestation"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView13"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem2" />

                                            <Button
                                                android:id="@+id/type2"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView13"
                                                android:layout_toRightOf="@+id/imageView13"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/rubish_dump"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView14"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem3" />

                                            <Button
                                                android:id="@+id/type3"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView14"
                                                android:layout_toRightOf="@+id/imageView14"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/illegal_building"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView15"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem4" />

                                            <Button
                                                android:id="@+id/type4"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView15"
                                                android:layout_toRightOf="@+id/imageView15"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/water_pollution"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView16"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem5" />

                                            <Button
                                                android:id="@+id/type5"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView16"
                                                android:layout_toRightOf="@+id/imageView16"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/biodiversity"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView17"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem6" />

                                            <Button
                                                android:id="@+id/type6"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView17"
                                                android:layout_toRightOf="@+id/imageView17"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/poaching"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/card_margin"
                                            android:paddingLeft="20sp"
                                            android:paddingRight="20sp">

                                            <ImageView
                                                android:id="@+id/imageView18"
                                                android:layout_width="52dp"
                                                android:layout_height="52dp"
                                                android:src="@drawable/problem7" />

                                            <Button
                                                android:id="@+id/type7"
                                                android:layout_width="match_parent"
                                                android:layout_height="57dp"
                                                android:layout_alignParentTop="true"
                                                android:layout_marginBottom="@dimen/card_bottom"
                                                android:layout_marginLeft="34dp"
                                                android:layout_marginStart="34dp"
                                                android:layout_toEndOf="@+id/imageView18"
                                                android:layout_toRightOf="@+id/imageView18"
                                                android:background="@color/filter_off"
                                                android:drawableRight="@drawable/check_on2"
                                                android:gravity="left|center_vertical"
                                                android:onClick="switchCheckButtonState"
                                                android:paddingLeft="20sp"
                                                android:paddingRight="20sp"
                                                android:text="@string/other"
                                                android:textAllCaps="false"
                                                android:textColor="@color/filter_button_text"
                                                android:textSize="20sp">

                                            </Button>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                </android.support.design.widget.NavigationView>

            </android.support.v4.widget.DrawerLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#D9D9D9"
        app:headerLayout="@layout/header"
        app:itemIconTint="#333"
        app:itemTextColor="#333"
        app:menu="@menu/navigation_drawer_items" />

</android.support.v4.widget.DrawerLayout>

