<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hmkcode.app.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#226666"
                android:theme="@style/DrawerArrowStyle"
                android:title="@string/app_name">

            </android.support.v7.widget.Toolbar>

            <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drawer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <android.support.design.widget.NavigationView
                    android:id="@+id/navigation2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginLeft="-64dp"
                    android:background="#D9D9D9"
                    app:itemIconTint="#333"
                    app:itemTextColor="#333">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:color="#BCBCBC"
                        android:orientation="vertical">

                        <ScrollView
                            android:id="@+id/scrollView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#D4AF6A"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/checkBox4"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:gravity="center"
                                    android:text="@string/type"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#01312D"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:color="#626060">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="51dp">

                                            <CheckBox
                                                android:id="@+id/checkBox4"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView3"
                                                android:layout_toRightOf="@+id/imageView3"
                                                android:text="@string/deforestation"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />

                                            <ImageView
                                                android:id="@+id/imageView3"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="26dp"
                                                android:layout_marginStart="26dp"
                                                android:src="@drawable/problem1" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp">

                                            <CheckBox
                                                android:id="@+id/checkBox5"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView4"
                                                android:layout_toRightOf="@+id/imageView4"
                                                android:text="@string/rubish_dump"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />

                                            <ImageView
                                                android:id="@+id/imageView4"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="26dp"
                                                android:layout_marginStart="26dp"
                                                android:src="@drawable/problem2" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="53dp">

                                            <CheckBox
                                                android:id="@+id/checkBox6"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView5"
                                                android:layout_toRightOf="@+id/imageView5"
                                                android:text="@string/illegal_building"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />

                                            <ImageView
                                                android:id="@+id/imageView5"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="27dp"
                                                android:layout_marginStart="27dp"
                                                android:src="@drawable/problem3" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="65dp">

                                            <ImageView
                                                android:id="@+id/imageView6"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="26dp"
                                                android:layout_marginStart="26dp"
                                                android:src="@drawable/problem4" />

                                            <CheckBox
                                                android:id="@+id/checkBox"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView6"
                                                android:layout_toRightOf="@+id/imageView6"
                                                android:text="@string/water_pollution"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp">

                                            <ImageView
                                                android:id="@+id/imageView7"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="27dp"
                                                android:layout_marginStart="27dp"
                                                android:src="@drawable/problem5" />

                                            <CheckBox
                                                android:id="@+id/checkBox2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView7"
                                                android:layout_toRightOf="@+id/imageView7"
                                                android:text="@string/biodiversity"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp">

                                            <ImageView
                                                android:id="@+id/imageView8"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="29dp"
                                                android:layout_marginStart="29dp"
                                                android:src="@drawable/problem6" />

                                            <CheckBox
                                                android:id="@+id/checkBox3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView8"
                                                android:layout_toRightOf="@+id/imageView8"
                                                android:text="@string/poaching"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="52dp">

                                            <ImageView
                                                android:id="@+id/imageView9"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="29dp"
                                                android:layout_marginStart="29dp"
                                                android:src="@drawable/problem7" />

                                            <CheckBox
                                                android:id="@+id/checkBox11"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toEndOf="@+id/imageView9"
                                                android:layout_toRightOf="@+id/imageView9"
                                                android:text="@string/other"
                                                android:textColor="#226666"
                                                android:textSize="20dp" />
                                        </RelativeLayout>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/status"
                                    android:id="@+id/textView22"
                                    android:textColor="#01312D"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:color="#626060">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp">

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/resolved"
                                                android:id="@+id/checkBox7"
                                                android:textColor="#226666"
                                                android:textSize="20dp"
                                                android:layout_centerVertical="true"
                                                android:layout_toRightOf="@+id/imageView11"
                                                android:layout_toEndOf="@+id/imageView11" />

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/imageView11"
                                                android:src="@drawable/resolved2"
                                                android:layout_centerVertical="true"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_marginLeft="26dp"
                                                android:layout_marginStart="26dp" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp">

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/unsolved"
                                                android:textColor="#226666"
                                                android:textSize="20dp"
                                                android:id="@+id/checkBox8"
                                                android:layout_centerVertical="true"
                                                android:layout_toRightOf="@+id/imageView10"
                                                android:layout_toEndOf="@+id/imageView10" />

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/imageView10"
                                                android:src="@drawable/unsolved"
                                                android:layout_alignParentBottom="true"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_marginLeft="26dp"
                                                android:layout_marginStart="26dp" />

                                        </RelativeLayout>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:gravity="center"
                                    android:text="@string/date"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#01312D"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:color="#626060">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp">


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp">


                                        </RelativeLayout>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                </android.support.design.widget.NavigationView>

            </android.support.v4.widget.DrawerLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#D9D9D9"
        app:headerLayout="@layout/header"
        app:itemIconTint="#333"
        app:itemTextColor="#333"
        app:menu="@menu/navigation_drawer_items" />

</android.support.v4.widget.DrawerLayout>

