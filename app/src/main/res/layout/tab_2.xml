<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hmkcode.app.AddNewProblemDecriptionActivity">

    <ImageView
        android:id="@+id/photo_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo_from_camera"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@+id/photo_from_camera"
        android:layout_toStartOf="@+id/photo_from_camera"
        android:onClick="getPhotoFromGallery"
        android:src="@drawable/add_photo" />

    <ImageView
        android:id="@+id/photo_from_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginTop="31dp"
        android:onClick="getPhotoFromCamera"
        android:src="@drawable/add_photo" />

    <include
        android:id="@+id/add_photo_preview"
        layout="@layout/small_photo_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photo_from_gallery"
        android:layout_marginTop="41dp" />

</RelativeLayout>