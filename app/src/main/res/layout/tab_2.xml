<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_teal"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    tools:context="com.hmkcode.app.AddNewProblemDecriptionActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusableInTouchMode="true"
            app:layout_collapseMode="parallax">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_photo_camera_black_48dp"
                android:gravity="left|center_vertical"
                android:onClick="getPhotoFromCamera"
                android:text="   Camera"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/button"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_photo_library_black_48dp"
                android:gravity="left|center_vertical"
                android:onClick="getPhotoFromGallery"
                android:text="   Gallery"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="11dp"
                android:background="#ffbcbcbc" />

            <TableLayout
                android:id="@+id/photo_descriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:layout_gravity="right"
                android:layout_marginTop="21dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

            </TableLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>





